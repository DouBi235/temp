/* pages/details/details.wxss */
page {
  background-color: #F5F5FA;
  padding-bottom:120rpx;
}
.navigati {
  display:block;
  width:100%;
  height:176rpx;
  background-color: #1EA0FF;
  text-align: center;
  line-height: 265rpx;
  font-size:36rpx;
  color:white;
}
/**swiper 样式代码**/
swiper {
  height:750rpx;
}
swiper image {
  width:100%;
  height:100%;
}

/**factory 样式代码**/
.factory {
  width:750rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  position:static;
}
.factory  .factoryName {
  display:block;
  width:548rpx;
  float:left;
  height:60rpx;
  line-height:60rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(30,35,40,1);
  margin:20rpx 30rpx 0 40rpx;
  border-right:solid 2rpx rgba(236,237,241,1);
}
.factory>image {
  width:38rpx;height:38rpx;
  margin:32rpx 6rpx;
  float:left;
}
.factory>text {
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:34rpx;
  float:left;
  margin-top:34rpx;
}

/* 优惠 样式代码 */
.prefe {
  clear:both;
  height:80rpx;
  padding-left:30rpx;
  box-sizing:border-box;
  background-color:white;
  display:flex;
  align-items: center;
}

.prefe image {
  width:24rpx;height:24rpx;
  margin-right:20rpx;
  vertical-align: middle;
}

.prefe text {
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  color:rgba(150,155,165,1);
  vertical-align: middle;
  margin-right:62rpx;
}

/**specificPosition  样式代码**/
.specificPosition {
  height:100rpx;
  background:rgba(255,255,255,1);
  padding:0 24rpx 0 30rpx;
  box-sizing:border-box;
}
.specificPosition>image {
  width:46rpx;height:46rpx;
  margin:27rpx 14rpx 0 0;
  float:left;
}
.specificPosition>text {
  display: block;
  float:left;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:40rpx;
  margin-top:30rpx;
}

.specificPosition>text.speRight {
  float:right;
  font-size:40rpx;
  font-family: simhei;
}

/**factoryInfo 样式代码**/
.factoryInfo {
  display:block;
  height:360rpx;
  background:rgba(255,255,255,1);
  margin:20rpx  0;
  padding:44rpx 34rpx 0 34rpx;
  box-sizing:border-box;
}
.factoryInfo .factoryInfoTitle {
  display:block;
  height:40rpx;
  position:relative;
  margin-bottom:36rpx;
  padding:0 64rpx;
  box-sizing:border-box;
}
.factoryInfo .factoryInfoTitle>text {
  position:absolute;
  width:112rpx;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:40rpx;
  top:0;right:0;bottom:0;left:0;
  margin:auto;
}
.factoryInfo .factoryInfoTitle .factoryInfoTitleLine {
  width:200rpx;
  height:2rpx;
  background:rgba(236,237,241,1);
  position:absolute;
  top:0;bottom:0;
  margin:auto 0;
}
.factoryInfo .factoryInfoTitle .factoryInfoTitleLine:last-of-type {
  right:0;
}

.factoryInfo .factDesc {
  display:block;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:40rpx;
}

/**technician  样式代码**/
.technician {
  display:block;
  height:100rpx;
  background:rgba(255,255,255,1);
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:100rpx;
  text-indent: 40rpx;
  position:relative;
}
.technician text {
  margin-left:15rpx;
}
.technician .technicianL {
  position:absolute;
  width:710rpx;
  height:2rpx;
  background:rgba(236,237,241,1);
  right:0;
}
/**green  样式代码**/
scroll-view {
  width:750rpx;
  height:300rpx;
  overflow:hidden;white-space:nowrap;
  padding-top:40rpx;
  box-sizing:border-box;
  background-color:white;
  margin-bottom:20rpx;
}

.scroll-view-item {
  width:120rpx;
  height:240rpx;
  display:inline-block;
  margin-right:42rpx;
}

scroll-view .scroll-view-item:first-of-type {
  margin-left:42rpx;
}
.scroll-view-item>image {
  width:120rpx;height:120rpx;
  margin-bottom:10rpx;
  border-radius:50%;
}
.scroll-view-item .technicianName {
  display:block;
  text-align:center;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(30,35,40,1);
}
.scroll-view-item .tLine {
  width:60rpx;
  height:2rpx;
  background:rgba(115,115,125,1);
  margin:8rpx auto; 
}
.scroll-view-item .tTime {
  display:block;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  text-align:center;
}
/**evaluation  样式代码**/
.evaluation {
  height:180rpx;
  background-color:white;
  border-top:solid 2rpx rgba(236,237,241,1);
  border-bottom:solid 2rpx rgba(236,237,241,1);
}

.evaluationLeft {
  width:174rpx;height:160rpx;
  border-right:solid 2rpx rgba(236,237,241,1);
  margin:10rpx 0 0 82rpx;
  float:left;
}
.evaluationLeft>text:first-of-type {
  display:inline-block;
  width:54rpx;
  height:112rpx;
  font-size:80rpx;
  font-family:Arial-Black;
  font-weight:900;
  color:rgba(250,100,75,1);
  line-height:112rpx;
  float:left;

}
.evaluationLeft>text:last-of-type {
  width:28rpx;
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(250,100,75,1);
  line-height:40rpx;
  margin-left:20rpx;
  display:inline-block;
  float:left;
  margin-top:55rpx;
}
.evaluationLeft>view {
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(150,155,165,1);
  line-height:34rpx;
  clear:both;
}

/**evaluationRight  样式代码**/
.evaluationRight {
  float:left;
  height:34rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(150,155,165,1);
  line-height:34rpx;
  margin:40rpx 0 0 20rpx;
}
.evaluationRight>text {
  float:left;
  margin-right:20rpx;
}
.evaluationRight>image {
  width:32rpx;height:32rpx;
  margin-top:2rpx;
  float:left;
  margin-right:12rpx;
}

/**evaluationItem  样式代码**/
.evaluationItem {
  min-height:300rpx;
  background-color:white;
  padding:20rpx 40rpx;
  box-sizing: border-box;
  border-bottom:solid 2rpx rgba(236,237,241,1);
}

.evaluationItem .userInfo {
  width:100%;
  height:80rpx;
}
.evaluationItem .userInfo>image {
  width:80rpx;height:80rpx;
  border-radius:50%;
  float:left;
}
.evaluationItem .userInfo .userName {
  float:left;
  width:50%;
  height:80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(30,35,40,1);
  line-height:40rpx;
  margin-left:20rpx;
}
.evaluationItem .userInfo .star image {
  width:24rpx;height:24rpx;
  margin-right:4rpx;
}
.evaluationItem .userEvaluation {
  height:120rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:40rpx;
  padding-left:102rpx;
}
.evaluationItem .userEvaluationTime {
  height:28rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(115,115,125,1);
  line-height:28rpx;
  text-align:right;
  margin-top:10rpx;
}
.evaluationList{
  padding-bottom:175rpx;
  box-sizing:border-box;
}
