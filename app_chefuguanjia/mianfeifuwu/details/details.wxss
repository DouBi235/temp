.appointmentWra {
  display:block;
  width:100%;
  height:120rpx;
  background-color:white;
  border-top:solid 2rpx #dedede; 
  position:fixed;
  bottom:0;  
}
.appointmentWra>button {
  width:520rpx;
  height:94rpx;
  background:rgba(30,160,255,1);
  border-radius:0;
