/* pages/mapPage/mapPage.wxss */ 
.mapPage{background-color: #F2F1ED;padding-top: 30rpx;}
.guiji{width:120rpx;height:120rpx;float: right;margin-right:20rpx; margin-top:100rpx;  }
.guiji cover-image{width: 100%;height: 100%;} 
.pickerBox{margin: 0 30rpx 8rpx;width:690rpx;height:80rpx;display:flex;justify-content: space-around;align-items: center;box-shadow:0px 0rpx 8rpx 4rpx rgba(155,165,170,0.5);
border-radius:10rpx;background: #fff;}
.picker{display: flex;align-items: center;}
.picker image{width: 50rpx;  height: 50rpx; margin-left:20rpx; }
.bottomBox{
  width: 100%;
  height: 500rpx;
  position: absolute;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  z-index: 99;
  bottom: 0rpx;
  background: #FFFFFF;
  padding-top:30rpx;
}
.items{
  width: 95%;
  height: 50rpx;
  padding-top: 10rpx;
   line-height: 40rpx;
  font-size: 25rpx;
  color: #1E2328;
}
.items cover-image{
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-right:30rpx; 
}
.operation{
  font-size: 25rpx;
  color: #1E2328;
  width: 80rpx;
  height: 48rpx;
  float: right;
}
.font-color{
  color: #FA644B;
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.content{
  width: 90%;
  height: 248rpx;
  padding-top:20rpx; 
  padding-left:40rpx; 
  margin: auto;
  position: relative;
   overflow-y: scroll;
}
.text{
  float: left;
  width: 70%;
  height:48rpx;
  line-height: 40rpx;
}
.border{
  width: 100%;
  height: 2rpx;
  background: #E6E6EB;
}
.lookMap{
  width: 248rpx;
  height: 64rpx;
  background: #1EA0FF;
  color: white;
  line-height: 64rpx;
  text-align: center;
  font-size: 24rpx;
  position: fixed;
  border-radius: 32rpx;
  left: 0rpx;
  right: 0rpx;
  margin: auto;
  bottom: 70rpx;
  
}
.lookMap text{
  display: block;
}
.lookDetail{
  width: 248rpx;
  height: 64rpx;
  background: #1EA0FF;
  border-radius:32rpx; 
  position: fixed;
  left: 0rpx;
  right: 0rpx;
  margin: auto;
  color: white;
  line-height: 64rpx;
  text-align: center;
  font-size: 24rpx;
}
.unfold{
  width: 100%;
  height: 80rpx;
}
.unfoldtext{
  color: #626569;
  height: 30rpx;
  width: 100%;
  font-size: 28rpx;
  text-align: center
}
.unfoldtext cover-image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: auto;
}
.btn{
  width: 100%;
  padding-left: 30rpx;
  height: 64rpx;
  position: absolute;
  bottom: 130rpx;
}


.protectPage{
  min-height: 100vh;
  background-size:750rpx 900rpx;
  background-repeat: no-repeat;
  background-position: bottom;
}
.textBox{
  margin: 60rpx 60rpx;
}
.textBox>text{display: block;}
.textBox image{
  width:32rpx;
  height:40rpx;
  margin-right: 16rpx;
}
.bh1{
font-size:48rpx; 
font-weight:600;
color:rgba(30,35,40,1);
line-height:66rpx;
}
.bh2{
font-size:32rpx; 
font-weight:400;
color:rgba(30,35,40,1);
line-height:40rpx;
}
.bh3{
font-size:24rpx; 
font-weight:400;
color:rgba(115,115,125,1);
line-height:44rpx;
}
.emptyleft{
  padding-left: 56rpx;
}
.actBtn{
  position: fixed;
  bottom: 100rpx;
  left: 75rpx;
  width:600rpx;
  height:100rpx;
  background:rgba(30,160,255,1);
  border-radius:50rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.actBtn:active{
  background: rgba(60,190,255,1);
}