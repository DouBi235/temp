.container {
  background-color: #fff;
  width: 100%;
  overflow: hidden;
  margin-bottom: 100rpx;
}

scroll-view {
  position: fixed;
  top: 0;
  width: 700rpx;
  height: 100%;
  font-size: 40rpx;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.color {
  color: #f55517;
}

.view-item-t {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  background-color: #eee;
}

.view-item-i {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
  padding-left: 40rpx;
  background-color: #fff;
}

.sidebar {
  position: fixed;
  right: 0;
  top: 0;
  width: 50rpx;
  margin-top: 60rpx;
}

.sidebar-item {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 38rpx;
}

.search {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 30rpx;
  position: relative;
}

input {
  float: left;
  width: 580rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #e2e2e2;
  box-sizing: border-box;
  border-radius: 20rpx;
  padding-left: 60rpx;
}
 
.search-list {
  width: 100%;
  margin-top: 20rpx;
}
