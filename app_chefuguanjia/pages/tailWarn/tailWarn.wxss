/* pages/tailWarn/tailWarn.wxss */
page,
.wrap { position: relative; width: 100%; height: 100%; overflow: hidden; }
.bg-img { width: 100%; height: 100%; }
.tail-title { position: absolute; top: 90rpx; left: 96rpx; right: 96rpx; height: 120rpx; line-height: 120rpx; text-align: center; font-size: 72rpx; color: #fff; border: 1rpx solid #fff; }
.tail-content { position: absolute; top: 300rpx; left: 30rpx; right: 30rpx; padding: 30rpx; background: #fff; border-radius: 10rpx; }
.tail-content .tail-item { display: flex; border-bottom: 1rpx solid #E6E6EB; padding: 10rpx 0 18rpx; }
.tail-content .tail-item:last-child { border-bottom: 0; padding-bottom: 0; }
.tail-content .tail-item .tail-icon { width: 50%; text-align: center }
.tail-content .tail-item .tail-icon .icon { width: 64rpx; height: 64rpx; }
.tail-content .tail-item .tail-icon .icon-desc { font-size: 32rpx; color: #CE8000; }
/* 正常信息 */
.tail-tree { position: absolute; bottom: 130rpx; width: 100%; text-align: center; color: #fff; font-size: 32rpx; }
.tail-tree .tree-num { color: #1FFF00; margin: 0 10rpx; font-weight: bold; }
.tree-icon { display: flex; justify-content: center; align-items: flex-end; margin-top: 20rpx }
.tree-icon_img { width: 80rpx; height: 80rpx; }
/** 异常信息 */ 
.tail-tree_errno { position: absolute; bottom: 110rpx; width: 100%; padding: 0 60rpx; text-align: center; font-size: 28rpx; }
.tail-tree_errno .tip { color: #FFA03C; }
.tail-tree_errno .btn { margin-top: 50rpx; }
.tail-tree_errno .btn text {  padding: 10rpx 10rpx 0; color: #FFE5D6; border-top: 1rpx solid #979797; font-size: 32rpx; }
/** 设备异常 状态元素 */
.tail-errno_fixed { position: fixed; top: 0; left: 0; z-index: 10000; width: 100%; height: 100%; background: linear-gradient(180deg,rgba(139,129,123,1) 0%,rgba(111,103,99,1) 100%); opacity: .5 }
.text-errno { color: #FF2B07; border: 1rpx solid #FF2B07; }
.bg-errno .tail-item .tail-icon .icon-desc { color: #FF2B07; } 
.bg-errno .tail-item { border-bottom: 1px solid #A2948E; }
.bg-errno { color: #FF2B07; background: linear-gradient(180deg,rgba(139,129,123,1) 0%,rgba(111,103,99,1) 100%); }
