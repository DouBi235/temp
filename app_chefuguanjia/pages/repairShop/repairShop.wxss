.repairShopPage{min-height: 100vh;background-color: #f5f5f5}
  .listBox{background-color: #f5f5f5;}
    .listItem{height: 220rpx;margin-bottom: 20rpx;padding-left: 20rpx;background-color: #fff;}
      .itemTop{display: flex;justify-content: space-between;padding: 10rpx 20rpx 10rpx 0;height: 218rpx;}
        .shopImg{height: 180rpx;width: 180rpx;}
        .shopInfo{width: 510rpx;display: flex;flex-direction: column;justify-content: space-around}
          .shopName{color: #1E2328;font-size: 32rpx;line-height: 44rpx;font-weight: 400rpx;overflow:hidden; text-overflow:ellipsis;display:-webkit-box; -webkit-box-orient:vertical;-webkit-line-clamp:1;}
          .shopText{color: #73737D;font-size: 24rpx;line-height: 40rpx;overflow:hidden; text-overflow:ellipsis;display:-webkit-box; -webkit-box-orient:vertical;-webkit-line-clamp:2;}
      .itemBottom{width: 530rpx; height: 81rpx;display: flex;justify-content: space-between;align-items: center;padding-right: 10rpx;}
        .iconBox{display: flex;justify-content: space-between;align-items: center;width: 450rpx;}
          .iconItem{font-size: 20rpx;color: #73737D;line-height: 28rpx;display: flex;align-items: center;}
            .iconImg{height: 32rpx;width: 32rpx;margin-right: 10rpx;}
        .selectBtn{width: 160rpx;height: 62rpx;margin: 0;line-height: 40rpx;font-size: 28rpx;}



button::after,.button-hover{border-radius: 0;border: 0;outline: none;}
button[disabled][type="default"],wx-button[disabled]:not([type]) {background: #C8C8D2;color: #fff;}
button{color: #fff;background-color: #1ea0ff;border-radius: 0;outline: none;display: flex;align-items: center;justify-content: center;}


        