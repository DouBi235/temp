/* message.wxss */

/* 背景颜色样式 */

.message_total {
  width: 750rpx;
  height: auto;
  background-color: #f4f5f8;
}

/* 背景颜色样式 */

/* tab切换样式 */

.swiper_total {
  width: 750rpx;
  /* border: 1rpx solid red; */
}

.swiper-tab {
  width: 750rpx;
  border-bottom: 2rpx solid #eee;
  text-align: center;
  line-height: 80rpx;
  background-color: #fff;
}

.swiper-tab-item {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #666;
  position: relative;
}

.on {
  color: #1ea0ff;
  border-bottom: 5rpx solid #1ea0ff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
}

/* tab切换样式 */

/* 消息样式 */

.scoll-h {
  height: 100%;
}

.msg {
  width: 750rpx;
  /* height: 220rpx; */
  height: auto;
  /* border: 1rpx solid black; */
  background-color: #fff;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title {
  width: 650rpx;
  height: auto;
  /* border: 1rpx solid red; */
  margin: 30rpx 0 10rpx 30rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.time {
  width: 650rpx;
  height: 28rpx;
  /* border: 1rpx solid red; */
  margin-left: 30rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.content {
  width: 650rpx;
  /* height: 68rpx; *//* border: 1rpx solid red; */
  margin-left: 30rpx;
  margin-bottom: 32rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 消息样式 */

.redDot {
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  border-radius: 50%;
  text-align: center;
  background: rgba(250, 100, 75, 1);
  position: absolute;
  right: 100rpx;
  top: 10rpx;
  color: #fff;
}
