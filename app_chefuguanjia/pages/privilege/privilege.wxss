/* pages/privilege/privilege.wxss */
.privilegePage{min-height: 100vh;background-color: #f5f5f5;}
  .top{height: 88rpx;width: 750rpx; display: flex;justify-content: center;align-items: center;background-color: #E4E9EB;color: #1EA0FF;font-size: 28rpx;}
  .listBox{}
    .listItem{display: flex;justify-content: space-between; margin-bottom: 20rpx;background-color: #fff;padding: 30rpx 20rpx;}
      .zhuanshuImg{height: 220rpx;width: 220rpx;}
      .rightInfo{height: 220rpx;width: 470rpx; display: flex;flex-direction: column;justify-content: space-between;}
        .titleBox{}
          .jiaobiaoImg{height: 36rpx;width: 62rpx;margin: 4rpx 0;position: absolute;}
          .titleText{color: #1E2328;font-size: 28rpx;line-height: 40rpx;font-weight: 400;text-indent: 80rpx;}
        .subTitleBox{color: #73737D;font-size: 22rpx;line-height: 36rpx;font-weight: 400;}
        .timeBox{display: flex;align-items: center;height: 40rpx;}
          .clockImg{height: 36rpx;width: 36rpx;}
          .line{color: #D2D7E1;font-size: 20rpx;line-height: 20rpx;margin: 0 20rpx;}
          .numText,.numUnit{color: #1EA0FF;font-size: 28rpx;line-height:38rpx;font-weight: 700;}
image{height: auto;width: auto;}
.text2Row{overflow:hidden; text-overflow:ellipsis;display:-webkit-box; -webkit-box-orient:vertical;-webkit-line-clamp:2; }


/* 弹窗样式 */
.userinfo{display:flex;flex-direction:column;align-items:center}
.userinfo-avatar{width:128rpx;height:128rpx;margin:20rpx;border-radius:50%}
.userinfo-nickname{color:#aaa}
.usermotto{margin-top:200px}
.mask{position:fixed;width:100%;height:100%;background-color:rgba(50,50,50,0.3);left:0;top:0}
.introduce{width:670rpx;position:fixed;background-color:#fff;top:50%;left:50%;margin-left:-335rpx;margin-top:-485rpx;border-radius:20rpx}
.herder-title{text-align:center;padding:34rpx 0;color:rgba(30,35,40,1);font-size:36rpx;font-weight:600;font-family:PingFangSC-Semibold}
.content{margin:0 28rpx;border-top:2rpx solid rgba(0,80,135,1);max-height: 60vh;overflow-y: scroll; padding:22rpx 0  0 0}
.content>view{display:flex;align-items:center;margin-bottom:20rpx} 
.describe{border-bottom:2rpx solid rgba(230,230,235,1);flex:1}
.content .title{font-size:24rpx;color:rgba(150,155,165,1)}
.theme{font-size:28rpx;color:rgba(30,160,255,1);font-weight:600;font-family:PingFangSC-Semibold;margin-bottom:30rpx}
.theme>view{line-height:40rpx}
.footer-title{border-top:2rpx solid #DCDCDC;text-align:center;padding:36rpx 0;color:#1EA0FF;font-size:36rpx;margin-top:8rpx;font-weight:400}