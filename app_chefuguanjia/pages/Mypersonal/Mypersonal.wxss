page {
    height: 100%;
}

.container {
    background: RGBA(245, 245, 250, 1);
    height: auto;
    padding-bottom: 100rpx;
}

.portrait {
    width: 100%;
    height: 120rpx;
    padding: 30rpx;
    font-size: 32rpx;
    line-height: 60rpx;
    text-align: left;
    background: white;
    position: relative;
}
 
.photo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    overflow: hidden;
    float: right;
    position: absolute;
    right: 80rpx;
    top: 10rpx;
}

.photoimage {
    display: block;
    width: 100%;
    height: 100%;
}

.fc {
    width: 100%;
    height: 80rpx;
    padding: 20rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    color: RGBA(150, 155, 165, 1);
}

.name {
    width: 100%;
    height: 100rpx;
    padding: 0rpx 0rpx 0rpx 30rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    background: white;
}

.box {
    height: 100%;
    width: 100%;
    padding: 20rpx 20rpx 20rpx 0rpx;
    border-bottom: 1rpx solid RGBA(240, 240, 240, 1);
}

.inputName {
    width: 300rpx;
    float: right;
}

.input {
    text-align: right;
    float: right;
}

.select {
    width: 100rpx;
    height: 100%;
    padding-left: 10rpx;
    float: left;
    border-right: 1rpx solid RGBA(240, 240, 240, 1);
}

.select image {
    width: 50rpx;
    height: 50rpx;
    margin-top: 5rpx;
    float: right;
}

.box image {
    width: 50rpx;
    height: 60rpx;
    float: right;
}

.ct {
    height: 60rpx;
    width: 300rpx;
    float: right;
}

.btn {
    width: 70%;
    height: 100rpx;
    background: RGBA(30, 160, 255, 1);
    line-height: 100rpx;
    color: white;
    border-radius: 0;
    margin-top: 100rpx;
}

/* picker选择器 */

.picker {
    display: flex;
    align-items: center;
}

.telInput>view {
    width: 100%;
}




/* 图片 */
.imgBar{width:750rpx;background: #fff;padding: 30rpx;display: flex;}
.imgBox{width: 116rpx;margin-right: 40rpx;height: 160rpx;text-align: center;}
.imgImg{position: relative;height: 116rpx;width: 116rpx;overflow:visible;display: block;}
.removeImg{height: 36rpx;width: 36rpx;position: absolute;line-height: 32rpx;background: red;border-radius: 50%;color: #fff;top: -18rpx;right: -18rpx;}
.addImg{height: 116rpx;width: 116rpx;border: 2rpx dashed #ddd;line-height: 100rpx;font-size: 120rpx;font-weight: 500;color: #C8C8D2;text-align: center;}
.imgText{font-size:20rpx;font-weight:400;color:rgba(30,35,40,1);line-height:28rpx;}