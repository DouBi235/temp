/* pages/personal/personal.wxss */
.personalPage{min-height: 100vh;background-color: #f5f5f5;width: 750rpx;}
  .headBox{height: 300rpx;width: 100%;position: relative;} 
    .inHeadBox{display: flex; flex-direction: column;align-items: center;justify-content: space-between;height: 300rpx;width: 750rpx;padding: 42rpx; background-size: 750rpx 300rpx;}
      .headImg{height: 160rpx;width: 160rpx;border-radius: 50%;border: 8rpx solid #fff;box-sizing: border-box;}
      .itag{height: 48rpx;width: 212rpx;margin-top:-50rpx;}
      .username{color: #fff;font-size: 28rpx;}
  .itemBar{background-color: #fff;height: 200rpx;width: 100%;display: flex;justify-content: space-around;}
    .itemBox{display: flex; flex-direction: column;align-items: center;justify-content: space-around;padding: 25rpx 0;height: 200rpx;  }
    
      .itemImg{height: 38rpx;width: 98rpx;}
      .itemLabel{color: #8F8F8F;font-size: 20rpx;}
      .itemText{color: #1EA0FF;font-size: 40rpx;font-weight: 700;}
      /* 邦保养剩余次数 */
      .Surplus_frequency{
        margin-top: 230rpx;
        z-index: 11;
        position: relative;
        font-size: 24rpx;
        color: #fff;
        font-weight:400;
      }
  .items{
    width: 100%;
    height: 100rpx;
    padding-left: 30rpx;
    background: white; 
    font-size: 35rpx;
    line-height: 40rpx;
  }
  .items image{
    width: 40rpx;
    height: 40rpx;
    float: right;
  }
  .itemsX{
    width: 100%;
    height: 100rpx;
    padding: 30rpx 30rpx 30rpx 0rpx;
    border-bottom: 1rpx solid RGBA(220, 220, 220, 1);
  }
  .msgNum{
    width: 40rpx;
    height: 40rpx;
    float: right;
    background: RGBA(250, 100, 75, 1);
    border-radius: 20rpx;
    text-align: center;
    color: white;
    font-size:30rpx;
    line-height: 40rpx; 

    /* 在这儿块状选项时用绝对定位 */
    position:absolute;
    right:0rpx;
    top:-20rpx;
  }
  


/* 修改后的样式 */
.noptBox{width:750rpx;height:200rpx;background:#fff;display: flex;align-items: center;justify-content: space-around;margin-bottom: 16rpx;margin-top: 4rpx;}
.nopt{width: 120rpx;height: 120rpx;display: flex;flex-direction: column;justify-content: space-between;align-items: center;position: relative;}
.nopt>image{height: 88rpx;width: 88rpx;}
.nopt>text{font-size:24rpx;font-weight:400;color:rgba(30,35,40,1);line-height:34rpx;}