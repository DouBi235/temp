page {
  font-size: 26rpx;
  color: #666;
}

view {
  box-sizing: border-box;
}

.body {
  border-top: solid 2rpx #ccc;
  padding-left: 30rpx;
}

.body>view {
  position: relative;
  display: flex;
  align-items: center;
}

.betime {
  position: relative;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.jiao {
  width: 16rpx;
  height: 16rpx;
  right: 32rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  bottom: 26rpx;
}

.line {
  height: 2rpx;
  background: #ccc;
}

.tipholder {
  font-size: 24rpx;
  color: #ccc;
}

.tipchange {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.userhead {
  justify-content: space-between;
  padding-right: 72rpx;
}

.userhead>.jiao {
  bottom: 60rpx;
}

.userhead>image {
  width: 90rpx;
  height: 90rpx;
  margin: 24rpx 0;
  border-radius: 100rpx;
}

.cartype {
  height: 84rpx;
}

.rg {
  height: 40rpx;
}

.cartype label {
  margin-left: 120rpx;
}

.cartype radio {
  transform: scale(0.7);
  margin-left: -8rpx;
}

.username, .usertel {
  margin-top: 24rpx;
  height: 68rpx;
}

input {
  margin-left: 30rpx;
  outline: none;
  border: none;
  background: #fff;
  width: 500rpx;
  color: #333;
}

.betime, .depot {
  justify-content: space-between;
  padding-right: 72rpx;
  margin-top: 24rpx;
  height: 68rpx;
}

.skill {
  padding: 0 30rpx;
  margin-top: 32rpx;
}

.skill>textarea {
  margin-bottom: 100rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  border: solid 2rpx #ccc;
  outline: none;
  display: block;
  width: 690rpx;
  height: 250rpx;
  background: #fff;
  border-radius: 10rpx;
  color: #333;
}

.reposition {
  background: rgba(0, 0, 0, 0.5);
  z-index: 560;
}

.reposition>view {
  background: #fff;
  border-radius: 32rpx;
  width: 500rpx;
  height: 300rpx;
  position: absolute;
  left: 128rpx;
  top: 30%;
  color: #777;
  font-size: 28rpx;
  padding: 50rpx;
}

.retitle {
  color: #222;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.reposition button {
  position: absolute;
  padding: 0;
  bottom: 30rpx;
  right: 50rpx;
  color: #0e6fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  border-radius: 0;
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
}