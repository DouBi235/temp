page {
  color: #666;
  font-size: 28rpx;
}

.box {
  box-sizing: border-box;
  margin-top: 30rpx;
}

.list {
  margin-top: 110rpx;
}

.list>text {
  margin-bottom: 30rpx;
  display: block;
}

.line {
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
  height: 2rpx;
  width: 690rpx;
  background: #ccc;
}

.type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  padding: 30rpx 30rpx 20rpx;
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 750rpx;
  font-size: 26rpx;
  z-index: 333;
  background: #fff;
}

.name {
  background: #fff;
  width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tip {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #ccc;
}

.picker {
  display: flex;
  align-items: center;
  width: 610rpx;
  height: 50rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.jiao {
  right: 40rpx;
  bottom: 34rpx;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
}

.btn {
  font-weight: normal;
  margin-top: 30rpx;
}
