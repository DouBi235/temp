/* pages/make/make.wxss */
.box{
  font-family: "PingFang-SC-Regular";
}
.box image{
  width: 28rpx;
  height: 24rpx;
}
.box-con{
   width: 650rpx;
   height:70rpx;
   border-bottom: 1px solid #CCCCCC;
   margin: 60rpx auto;
   display: flex;
   justify-content: space-around;
   align-items: center;
   font-size: 30rpx;
}
/* s 车牌号 */
.carPicker { display: flex; position: relative; }
.carPicker .carCity { width: 110rpx; margin-left: 10rpx; flex-shrink: 0; }
.carPicker .carZimu { width: 110rpx; flex-shrink: 0; }
.carPicker .carInput { border-left: 1px solid #ccc; padding-left: 30rpx; }
.carPicker .errorText { position: absolute; top: 5px; right: 0; color: red; }
/* e 车牌号 */
.box-con input{
  width:590rpx;
  height: 23rpx;
  /* border: 1px solid; */
}
.box-yysj{
   font-size:30rpx; 
   display: block;
   color: #020814;
   width:116px;
    height:28px;
   margin-left: 51rpx;
   margin-top: 100rpx;
}
.box-btn{
   width: 100%;
   height: 88rpx;
   background: #1F2532;
   color: #fff;
   position: absolute;
   left: 0;
   bottom: 0;
   line-height: 88rpx;
   font-size: 32rpx;
   border-radius: 0;
   z-index: 250;
}
