/**index.wxss**/ 
.indexPage{background-color: #F5F5F5;min-height: 100vh;width: 100%;  }   
/* 蓝色上部 */
.idx{height: 200rpx;width: 750rpx;position: fixed;top: 0;left: 0;z-index: 50;}
.idx1{height: 200rpx;width: 750rpx;display: block;position: fixed;top: 0;left: 0;z-index: 50;}
.idx2{height: 200rpx;width: 750rpx;position: fixed;top: 0;left: 0;color: #fff;display: flex;flex-direction: column;align-items: center;justify-content: space-around;padding: 20rpx;z-index: 50;} 
.idx4{width: 750rpx;display: flex;align-items: center;justify-content: space-around;}  
.idx7{display: flex; flex-direction: column; align-items: center;justify-content: space-around;}
.idx8{font-size: 24rpx;line-height: 60rpx;display: block;height: 60rpx;width: 144rpx;border-bottom: 1rpx solid #4BB4FF;text-align: center;}
.idx9{font-weight: 700;font-size: 42rpx;line-height: 60rpx;} 

/* 列表切换及上啦下拉 */
.switchList{position: absolute;top: 200rpx;width: 100%;}
.tab-h{height: 80rpx;width: 750rpx; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #fff; font-size: 28rpx; white-space: nowrap;position: fixed;top: 200rpx; left: 0; z-index: 99;overflow-x: scroll;}
.tab-item{width: 50%;display: inline-block;text-align: center;}
.tab-item.active{color: #1EA0FF;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 4rpx;width: 100%;background: #1EA0FF;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.tab-content{margin-top: 80rpx;background-color: #F5F5F5;}
.scoll-h{height: 100%;width: 750rpx;padding:20rpx 0 100rpx;}

/* 列表每一项 */ 
.itemBox1,.itemBox2{background-color: #fff;box-sizing: border-box;}
.subPeople{height: 140rpx;background-color: #fff;display: flex;justify-content: space-between;align-items: center;padding:0 30rpx;border-bottom: 1rpx solid #E6E6EB;width: 750rpx;box-sizing: border-box; }
.itemLeft{display: flex;}
.itemLeft image{ width:100rpx;height:100rpx;border-radius: 50%;display: block;margin-right: 20rpx;}
.leftInfo,.itemRight{height: 100rpx;display: flex;flex-direction: column;justify-content: space-around;}
.itemRight{align-items: flex-end;}
.name{font-size:32rpx; font-weight:400;color:#1E2328;line-height:44rpx;}
.subInfo{ font-size:24rpx; font-weight:400;color:#969BA5;line-height:34rpx;}
.money{ font-size:36rpx; font-weight:normal;color:#1EA0FF;line-height:42rpx;}
.itemBottom{width:750rpx;height:72rpx; font-size:24rpx; font-weight:400;color:#969BA5;line-height:72rpx;display: flex;justify-content: space-between;padding:0 30rpx;box-sizing: border-box;background-color: #fff;}

/* 如果没有列表的话 */
.emptyListBox{margin: 112rpx auto;width: 304rpx;text-align: center;}
.emptyListBox image{height: 304rpx;width: 304rpx;display: block;}
.emptyListBox text{color: #C8C8D2;font-size: 24rpx;line-height: 34rpx;margin-top: 2rpx;}
 
