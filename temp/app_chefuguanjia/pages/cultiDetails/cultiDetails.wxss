/* pages/cultiDetails/cultiDetails.wxss */
page { background: #F5F5FA }
.nodata { margin-top: 100rpx; text-align: center; color: #969BA5 }
.pl30 { padding-left: 30rpx; }
.pr30 { padding-right: 30rpx; }
.pageLoading { position: fixed; top: 0; left: 0; background: #fff; width: 100%; height: 100%; }
.pageLoading button { font-size: 24rpx; background: transparent; margin-top: 100rpx; }
.pageLoading button::after { border: 0 }
.inner { display: flex; height: 100%; align-items: center; border-bottom: 1rpx solid #E6E6EB; color: #969BA5 }
.v99-item { height: 140rpx; background: #fff; }
.img { flex-shrink: 0; border-radius: 50%; }
.img.max { width: 100rpx; height: 100rpx; }
.img.min { width: 80rpx; height: 80rpx; }
.name { font-size: 32rpx; margin-left: 20rpx; flex-grow: 1 }
.money { color: #1EA0FF; font-size: 48rpx; font-weight: bold; }
.money .unit { margin-left: 10rpx; color: #969BA5; font-size: 24rpx; }

/* 推广中心 */
.spread-title { height: 120rpx; }
.spread-item { background: #fff; box-shadow: 0 5rpx 10rpx #F5F5FA; margin-bottom: 20rpx }
.spread-group { padding: 0 30rpx; display: flex; flex-wrap: wrap; }
.spread_info { padding: 20rpx 0; width: 20%; flex-shrink: 0; border-bottom: 1rpx solid #E6E6EB; text-align: center; font-size: 24rpx; }
.spread-group .name { font-size: 24rpx; }