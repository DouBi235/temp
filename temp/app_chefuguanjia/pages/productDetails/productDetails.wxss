.privilegeDetPage{min-height: 100vh;background-color: #f5f5f5;}
  .itemBox{background-color: #fff;}
    .imgSwiper{height: 750rpx;width: 750rpx;}
      .slide-image{width: 100%;height: 100%;}
    .infoBox{min-height: 100rpx;width: 100%;border-bottom: 1rpx solid #E6E6EB;padding: 20rpx 30rpx;}
