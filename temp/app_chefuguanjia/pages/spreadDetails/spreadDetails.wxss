/* pages/directDet/directDet.wxss */
view{box-sizing: border-box;}

.pageLoading { position: fixed; top: 0; left: 0; background: #fff; width: 100%; height: 100%; }
.pageLoading button { font-size: 24rpx; background: transparent; margin-top: 100rpx; }
.pageLoading button::after { border: 0 }
.directDetPage{min-height: 100vh;background-color: #F5F5FA;}
  .directPeople{padding-left: 30rpx;}
  .directPeople,.subPeople{height: 140rpx;background-color: #fff;display: flex;justify-content: space-between;align-items: center;padding-right: 30rpx;border-bottom: 1rpx solid #E6E6EB;}
  .subDirect{height: 80rpx; font-size:24rpx;font-weight:400;color:#969BA5;line-height:80rpx;padding-left: 30rpx;}
  .subDirectBox{background-color: #fff;padding-left: 30rpx;}
  

/* item */
.itemLeft{display: flex;}
.itemLeft image{ width:100rpx;height:100rpx;border-radius: 50%;display: block;margin-right: 20rpx;}
.leftInfo,.itemRight{height: 100rpx;display: flex;flex-direction: column;justify-content: space-around;}
.itemRight{align-items: flex-end;}
.name{font-size:32rpx; font-weight:400;color:#1E2328;line-height:44rpx;}
.subInfo{ font-size:24rpx; font-weight:400;color:#969BA5;line-height:34rpx;}
.money{ font-size:36rpx; font-weight:normal;color:#1EA0FF;line-height:42rpx;}
.noData { text-align: center }
.noData image { width: 280rpx; height: 280rpx; }
.noData .msg { color: #969BA5; font-size: 24rpx; }
  