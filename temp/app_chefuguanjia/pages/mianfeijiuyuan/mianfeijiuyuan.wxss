/**index.wxss**/ 
.indexPage{background-color: #F5F5F5;min-height: 100vh;width: 100%;  }    

/* 列表切换及上啦下拉 */
.switchList{position: absolute;top: 0;width: 100%;}
.tab-h{height: 80rpx;width: 750rpx; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #fff; font-size: 28rpx; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;overflow-x: scroll;}
.tab-item{width: 50%;display: inline-block;text-align: center;}
.tab-item.active{color: #1EA0FF;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 4rpx;width: 100%;background: #1EA0FF;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.tab-content{margin-top: 80rpx;background-color: #F5F5F5;}
.scoll-h{height: 100%;width: 750rpx;padding:20rpx 0 100rpx;}

/* 列表每一项 */ 
.itemBox1,.itemBox2{background-color: #fff;box-sizing: border-box;}
.itemb{height: 168rpx;width: 750rpx;background: #fff;padding: 20rpx 30rpx; box-sizing: border-box;display: flex;align-items: center;margin-bottom: 20rpx;position: relative;}
.position{height: 32rpx; width: 32rpx;}
.itemImg{height: 128rpx;width: 128rpx;margin-right: 20rpx;}
.itemt{display: flex;flex-direction: column;}
.maint{font-size:32rpx;font-family:PingFangSC-Regular;font-weight:400;color:rgba(30,35,40,1);line-height:36rpx;max-width: 540rpx;}
.subt{margin-top: 20rpx;font-size:20rpx;font-family:PingFangSC-Regular;font-weight:400;color:rgba(115,115,125,1);
line-height:28rpx;display: flex;align-items: center;}
.absltBtn{position: absolute;bottom: 20rpx;right: 30rpx;width:130rpx;height:48rpx;font-size:24rpx;font-family:PingFangSC-Regular;font-weight:400;color:rgba(255,255,255,1);background:rgba(30,160,255,1);line-height: 48rpx;text-align: center;}

.itemBottom{width:750rpx;height:72rpx; font-size:24rpx; font-weight:400;color:#969BA5;line-height:72rpx;display: flex;justify-content: space-between;padding:0 30rpx;box-sizing: border-box;background-color: #fff;}


/* empty */
.emptyBox{min-height: 100vh;display: flex;flex-direction: column;justify-content: center;align-items: center;padding-bottom: 50rpx}
.wufap{font-size:28rpx;width: 300rpx;text-align: center;font-weight:400;color:rgba(115,115,125,1);line-height:40rpx;margin-top: 20rpx;}