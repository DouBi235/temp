page {
  background: #f5f5f5;
  padding-bottom: 170rpx;
}

.form-box {
  background: #fff;
  margin-bottom: 70rpx;
  padding-top: 40rpx;
  padding-bottom: 26rpx;
}

.formlist {
  margin-bottom: 40rpx;
  margin-left: 82rpx;
  width: 628rpx;
}

.formlist::after {
  content: '';
  display: block;
  height: 0;
  clear: both;
  overflow: hidden;
}

.li-icon {
  position: absolute;
  left: -50rpx;
  top: 28rpx;
  width: 28rpx;
  height: 24rpx;
}

.li-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.li-content {
  position: relative;
}

.conput {
  box-sizing: border-box;
  border: solid 2rpx #e6e6e6;
  padding: 20rpx;
  width: 100%;
  height: 300rpx;
  color: #333;
  font-size: 26rpx;
}

.contip {
  color: #ccc;
}

.li-line {
  background: #e6e6e6;
  width: 100%;
  height: 2rpx;
}

.photolist {
  display: flex;
  justify-content: center;
  width: 690rpx;
  margin: 0 auto;
}

.photoselector {
  margin: 0 auto;
  box-sizing: content-box;
  width: 90rpx;
  height: 160rpx;
  border: dashed 2rpx #ccc;
  line-height: 160rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
}

.li-tip {
  text-align: center;
  color: #ccc;
  margin-top: 20rpx;
  font-size: 20rpx;
}

.li-photo {
  margin-left: 2rpx;
  height: 160rpx;
}

.li-photo:nth-of-type(1) {
  margin-left: 0;
}
