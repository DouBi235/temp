page {
  padding-top: 100rpx;
}

.save {
  position: fixed;
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0;
  bottom: 0;
  left: 0;
  z-index: 33;
}

.box {
  margin-bottom: 70rpx;
  position: relative;
}

.title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 48rpx;
  display: flex;
  align-items: center;
}

.title>text {
  margin-left: 20rpx;
}

.input {
  color: #333;
  font-size: 24rpx;
  width: 690rpx;
  height: 80rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.intip {
  color: #999;
}

.relief {
  color: #21c5bd;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.relief image {
  margin-right: 12rpx;
  width: 24rpx;
  height: 24rpx;
}

.toright {
  display: flex;
  margin-left: 30rpx;
}

.jiao {
  position: static;
  width: 20rpx;
  height: 20rpx;
}

.phonetip {
  position: absolute;
  left: 48rpx;
  bottom: -48rpx;
  font-size: 24rpx;
  color: #e14244;
}
