page {
  background: #f5f5f5;
}

.head {
  height: 230rpx;
  position: relative;
  background: #fff;
}

.bigcir {
  position: absolute;
  width: 1050rpx;
  left: -150rpx;
  height: 360rpx;
  top: -280rpx;
  border-radius: 70%;
  background: #21c5bd;
}

.head-info {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 12rpx;
}

.head-imgbor {
  background: #fff;
  width: 130rpx;
  height: 130rpx;
  border-radius: 100rpx;
  margin-bottom: 24rpx;
  padding-top: 5rpx;
}

.head-uname {
  font-size: 30rpx;
  color: #333;
}

.head-imgbor>image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 100rpx;
}

.body {
  padding: 50rpx;
}

.row {
  margin-bottom: 45rpx;
}

.grid {
  background: #fff;
  border-radius: 20rpx;
  width: 300rpx;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 45rpx;
}

.grid.l {
  float: left;
}

.grid.r {
  float: right;
}

.grid>image {
  width: 150rpx;
  height: 150rpx;
}

.title {
  font-size: 26rpx;
  color: #333;
  margin-top: 50rpx;
}
