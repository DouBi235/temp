.tabbar {
  position: fixed;
  z-index: 333;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.3);
}

.tb-item {
  position: relative;
  text-align: center;
  width: 40%;
  color: #999;
  font-size: 22rpx;
}

.tb-item.cur {
  color: #21C5BD;
}

.tb-home {
  position: absolute;
  left: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tb-mine {
  position: absolute;
  right: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tb-publish {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.tb-cirbor {
  position: absolute;
  z-index: -1;
  background: #fff;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.5);
  left: calc(50% - 39rpx);
  bottom: 44rpx;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50rpx;
}
